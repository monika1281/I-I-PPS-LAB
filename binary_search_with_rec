#include<stdio.h>
int binary_search(int ,int [],int,int,int );
int main(){
	
 int size;
 printf("Enter array size");
 scanf("%d",&size);
 int low=0;
 int high=size-1;
 int a[size];
 printf("enter array elements");
 int i;
 for(i=0;i<size;i++)
 {
 scanf("%d",&a[i]);
 }
int j;
 int temp;
 for(i=0;i<size-1;i++)
 {
 for(j=0;j<size-i-1;j++)
 {
 if(a[j]>a[j+1])
 {
 temp=a[j];
 a[j]=a[j+1];
 a[j+1]=temp;
 }
 }
 }
 printf("elements after sorting:");
 for(i=0;i<size;i++)
 {
 printf("%5d",a[i]);
 }
 int key;
 printf("\nenter key element:");
 scanf("%d",&key);
 int result=0;
 result=binary_search(size,a,key,low,high);
 if(result==-1){
 printf("search is unsuccessful");
}
 else
 printf("element found at index %d ",result+1);
 
 return 0;
 }
 int binary_search(int size,int a[],int key,int low,int high)
 {
  
 
 while(low<=high)
 {
  int mid;
 mid=(low+high)/2;
 if(key>a[mid])
 {
 return binary_search(size,a,key,mid+1,high);
 }
 else if(key==a[mid])
 {
 return mid;
 }
 else if(key<a[mid])
 {
 return binary_search(size,a,key,low,mid-1);
 }
 }
 return -1 ;
 }
 -------------------------------------------
 output:-
 Enter array size 5
enter array elements 3 4 2 6 7
elements after sorting:    2    3    4    6    7
enter key element: 6
element found at index 4
----------------------------------------------
output2:-
Enter array size 5
enter array elements 3 4 2 7 5
elements after sorting:    2    3    4    5    7
enter key element: 9
search is unsuccessful
